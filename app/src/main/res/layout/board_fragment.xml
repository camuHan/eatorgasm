<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools" >
    <data>
        <variable
            name="board"
            type="com.cason.eatorgasm.model.entity.BoardInfoModel" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/board_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/board_fragment_background" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/board_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="com.cason.eatorgasm.component.EatHomeActivity">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/board_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"
                    app:layout_constraintBottom_toTopOf="@id/cl_board_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/board_tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/board_view_pager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <include
                    android:id="@+id/cl_board_profile"
                    layout="@layout/private_profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/board_tab_layout"
                    app:layout_constraintBottom_toTopOf="@id/common_divider1"/>

                <View
                    android:id="@+id/common_divider1"
                    style="@style/CommonDivider"
                    app:layout_constraintBottom_toTopOf="@id/tv_board_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_board_profile" />

                <TextView
                    android:id="@+id/tv_board_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:background="@drawable/common_round_shape"
                    android:gravity="center_vertical"
                    android:text="@{board.title}"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tv_board_contents"
                    app:layout_constraintEnd_toStartOf="@id/ib_board_list_more"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/common_divider1" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ib_board_list_more"
                    android:layout_width="@dimen/home_image_button_width"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_more"
                    android:tint="@color/gray07"
                    app:layout_constraintBottom_toBottomOf="@id/tv_board_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_board_title" />

                <TextView
                    android:id="@+id/tv_board_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="@{board.contents}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_board_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/board_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?colorPrimary"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_back_arrow" />
    </FrameLayout>
</layout>