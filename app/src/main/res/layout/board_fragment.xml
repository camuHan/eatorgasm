<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/board_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cason.eatorgasm.component.BoardFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_board_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_round_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:hint="@string/string_title" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/et_board_contents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_round_shape"
        app:layout_constraintTop_toBottomOf="@id/tl_board_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_board_confirm" />

    <Button
        android:id="@+id/btn_board_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cm_btn_done"
        app:layout_constraintTop_toBottomOf="@id/et_board_contents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>