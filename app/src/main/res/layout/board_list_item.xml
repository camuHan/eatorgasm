<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.cason.eatorgasm.model.entity.BoardInfoModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/cl_private_profile"
                layout="@layout/private_profile_layout"
                app:layout_constraintBottom_toTopOf="@id/board_divider1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/board_divider1"
                style="@style/CommonDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_private_profile"
                app:layout_constraintBottom_toTopOf="@id/tv_board_list_title"/>

            <TextView
                android:id="@+id/tv_board_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transitionName="title_transition"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="@{model.title}"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/board_divider1"
                app:layout_constraintBottom_toTopOf="@id/fl_board_list_image"
                app:layout_constraintEnd_toStartOf="@id/ib_board_list_more"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ib_board_list_more"
                android:layout_width="@dimen/home_image_button_width"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_more"
                android:tint="@color/gray07"
                app:layout_constraintBottom_toBottomOf="@id/tv_board_list_title"
                app:layout_constraintTop_toTopOf="@id/tv_board_list_title"
                app:layout_constraintEnd_toEndOf="parent" />


            <FrameLayout
                android:id="@+id/fl_board_list_image"
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_board_list_title"
                app:layout_constraintBottom_toTopOf="@id/tv_board_list_contents" >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_board_list_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/splash_eat_cason"
                    android:scaleType="fitXY" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_board_list_contents"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:text="@{model.contents}"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fl_board_list_image" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>