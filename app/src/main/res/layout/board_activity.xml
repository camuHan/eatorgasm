<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="board"
            type="com.cason.eatorgasm.model.entity.BoardInfoModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/board_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/board_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tl_board_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/board_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="com.cason.eatorgasm.component.EatHomeActivity">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/board_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"
                    app:layout_constraintBottom_toTopOf="@id/cl_board_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/board_tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/board_view_pager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <include
                    android:id="@+id/cl_board_profile"
                    layout="@layout/private_profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/board_tab_layout"
                    app:layout_constraintBottom_toTopOf="@id/board_divider1"/>

                <View
                    android:id="@+id/board_divider1"
                    style="@style/CommonDivider"
                    app:layout_constraintBottom_toTopOf="@id/tv_board_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_board_profile" />

                <TextView
                    android:id="@+id/tv_board_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:transitionName="title_transition"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:background="@drawable/board_round_shape"
                    android:gravity="center_vertical"
                    android:text="@{board.title}"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tv_board_contents"
                    app:layout_constraintEnd_toStartOf="@id/ib_board_list_more"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/board_divider1" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ib_board_list_more"
                    android:layout_width="@dimen/home_image_button_width"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_more"
                    android:tint="@color/gray07"
                    app:layout_constraintBottom_toBottomOf="@id/tv_board_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_board_title" />

                <TextView
                    android:id="@+id/tv_board_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="@{board.contents}"
                    android:textSize="15sp"
                    android:background="@drawable/board_round_shape"
                    app:layout_constraintBottom_toTopOf="@id/board_divider2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_board_title" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_board_etc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:gravity="end"
                    app:layout_constraintBottom_toTopOf="@id/board_divider2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_board_contents" >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_board_etc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="right"
                        android:text="@{@string/board_compliant(board.likeCount, board.commentCount, board.viewCount)}" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:id="@+id/board_divider2"
                    style="@style/CommonDivider"
                    app:layout_constraintBottom_toTopOf="@id/rv_board_comments"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_board_etc" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_board_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/board_divider2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:listitem="@layout/comment_list_item" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/board_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?colorOnPrimary"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_back_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_board_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            style="@style/EatCommonTextInputLayout"
            app:hintEnabled="false"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_board_comment_ok"
            app:layout_constraintTop_toBottomOf="@id/board_scrollview"
            app:layout_constraintBottom_toBottomOf="parent" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_board_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/board_input_comment" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_board_comment_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cm_btn_done"
            android:background="@drawable/eat_theme_round_shape"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintTop_toTopOf="@id/tl_board_comment"
            app:layout_constraintStart_toEndOf="@id/tl_board_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tl_board_comment" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>