<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/home_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray13"
        android:orientation="vertical">

        <include layout="@layout/common_toolbar"
            android:id="@+id/home_toolbar_layout" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/common_fragment_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_toolbar_layout"
            app:layout_constraintBottom_toTopOf="@id/home_divider" />

        <View android:id="@+id/home_divider"
            style="@style/SubTitleDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_view_pager" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/home_type_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_tab_layout_height"
            android:background="@color/common_tab_bg"
            app:tabBackground="@drawable/home_tab_background"
            app:tabTextAppearance="@style/CommonTabtext"
            app:tabTextColor="@drawable/common_tab_selector"
            app:tabPadding="0dp"
            app:tabIndicatorHeight="0dp"
            app:tabRippleColor="@android:color/transparent"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            android:elevation="7dp"
            app:layout_constraintTop_toBottomOf="@id/home_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>